@page
@model LoginModel


<div class="parent-container row">
    <div class="col-md-4 mt-5 d-none d-md-block">
        <img src="~/images/undraw_access_account_re_8spm.svg" alt="image" width="100%" style="position: relative; top: 50%; transform: translateY(-50%);">
    </div>
    <div class="child-container col-md-8 d-flex justify-content-center align-items-center ">
        <!-- Your content here -->
        <div class="flex-column rounded-5 mt-5 p-4" style="border:5px solid #593196;width:450px;">
            <div class="text-center text-uppercase text-primary fs-2 fw-bolder mt-5">Log In</div>
            <div class="">
                <section>
                    <form id="account" method="post">
                        <h4 class=" mt-3 text-center  fs-5" style="color:#cccccc">Doesn't have an account yet? <a class=" text-capitalize text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a> </h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                       
                        <div class="d-flex justify-content-between">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label mt-2">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                                </p>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Log in</button>
                        </div>
                       
                    </form>
                </section>
            </div>
