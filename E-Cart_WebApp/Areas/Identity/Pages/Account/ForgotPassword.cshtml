@page
@model ForgotPasswordModel



<div class="parent-container row">
    <div class="col-md-4 mt-5 d-none d-md-block">
        <img src="~/images/undraw_forgot_password_re_hxwm.svg" alt="image" width="100%" style="position: relative; top: 50%; transform: translateY(-50%);">
    </div>
    <div class="child-container col-md-8 d-flex justify-content-center align-items-center">
        <div class="flex-column rounded-5 mt-5 p-4" style="border:5px solid #593196;width:450px;">
            <div class="text-center text-uppercase text-primary fs-2 fw-bolder mt-1">Forgot Password</div>
            <div class="">
                <form method="post">
                    <h4 class=" mt-3 text-center text-uppercase fs-5">Enter your Email</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
